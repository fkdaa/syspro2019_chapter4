
import time
import RPi.GPIO as GPIO

GPIO.setmode(GPIO.BCM)
GPIO.setup(2, GPIO.OUT)
servo = GPIO.PWM(2, 50)
servo.start(0.0)

n = 1900/180

def setservo(dig):
	buf = 1440
	if dig!=0:
		buf += dig*n
	servo.ChangeDutyCycle((buf/20000)*100)

for i in range(-3,3):
	print(i)
	servo.ChangeDutyCycle(7.2)
#	setservo(i*30)
	time.sleep(1.0)
	servo.ChangeDutyCycle(12.0)
	time.sleep(1.0)

GPIO.cleanup()


